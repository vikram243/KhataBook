<%- include('./partials/header.ejs') %>
    <div class="relative py-2 sm:max-w-lg sm:mx-auto">
        <div
            class="absolute inset-0 bg-gradient-to-r from-green-400 to-blue-500 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl">
        </div>
        <div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-14">
            <h1 class="text-2xl font-bold text-center mb-4">Edit Your Profile</h1>
            <form>
                <div class="space-y-8">
                    <!-- Profile Picture -->
                    <div class="grid grid-cols-1 gap-2">
                        <img src="https://d2qp0siotla746.cloudfront.net/img/use-cases/profile-picture/template_0.jpg"
                            alt="Current Profile Picture" id="profilePicPreview"
                            class="mt-1 block w-24 h-24 rounded-full object-cover">
                        <label class="block text-sm font-medium text-gray-700">Change Profile Picture</label>
                        <input type="file"
                            class="mt-1 block w-full rounded-md border-red-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50"
                            id="profilePic">
                    </div>

                    <!-- Name -->
                    <div class="grid grid-cols-1 gap-2">
                        <label class="block text-sm font-medium text-gray-700">Name</label>
                        <input type="text"
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50"
                            placeholder="Your Name" id="name">
                    </div>

                    <!-- Email -->
                    <div class="grid grid-cols-1 gap-2">
                        <label class="block text-sm font-medium text-gray-700">Email</label>
                        <input type="email"
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50"
                            placeholder="youremail@example.com" id="email">
                    </div>

                    <!-- Password -->
                    <div class="grid grid-cols-1 gap-2">
                        <label class="block text-sm font-medium text-gray-700">Password</label>
                        <input type="password"
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50"
                            placeholder="Your New Password" id="password">
                    </div>

                    <!-- Submit Button -->
                    <div class="flex items-center justify-end">
                        <button type="submit" class="px-4 py-2 text-white bg-blue-600 rounded hover:bg-blue-700">Save
                            Changes</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <%- include('./partials/footer.ejs') %>